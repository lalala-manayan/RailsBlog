<div class="container"> 
  <div class="row">
    <div class="col-md-6 my-3 text-center">
      <h3 class="mb-2">アイキャッチ画像</h3>
        <img class="card-img-top" src="http://placehold.it/640x426" alt="">
    </div>
    <div class="col-md-6 my-3 ml-auto">
      <h3 class="my-3 text-center">投稿編集中</h3>
      <div class="d-flex mt-1">
        <small class="text-muted ml-auto"><span><%= time_ago_in_words(@post.created_at) %>前</span></small>
      </div>
      <%= render 'form', post: @post %>
      <div class="d-flex mt-1">
        <%= link_to '削除', @post, method: :delete, data: { confirm: '完全に削除しますか？' }, class: "btn btn-sm btn-outline-secondary ml-auto mt-5" %>
      </div>
    </div>
  </div>
</div>