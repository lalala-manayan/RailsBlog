<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
      <ul>
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label "タグ名" %>
    <%= form.text_field :name, placeholder: "タグの名前を入力して下さい", class: "form-control" %>  <!-- スタイルを指定 -->
  </div>
  <div class="form-group">
    <%= form.label "タグ色" %>
      <!-- 修正＆追加 -->
      <div class="badge badge-pill badge-primary mx-1 mb-1">primary</div>
      <div class="badge badge-pill badge-secondary mx-1 mb-1">secondary</div>
      <div class="badge badge-pill badge-success mx-1 mb-1">success</div>
      <div class="badge badge-pill badge-danger mx-1 mb-1">danger</div>
      <div class="badge badge-pill badge-warning mx-1 mb-1">warning</div>
      <div class="badge badge-pill badge-info mx-1 mb-1">info</div>
      <%= form.select :color, [      
                                ["primary","badge badge-pill badge-primary"],
                                ["secondary","badge badge-pill badge-secondary"],
                                ["success","badge badge-pill badge-success"],
                                ["danger","badge badge-pill badge-danger"],
                                ["warning","badge badge-pill badge-warning"],
                                ["info","badge badge-pill badge-info"]
                              ],{prompt: "タグの色を選択してください"}, class: "form-control" %>
      <!-- ここまで修正＆追加 -->
  </div>
  <div class="actions mt-3"> <!-- スタイルを追加 -->
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>