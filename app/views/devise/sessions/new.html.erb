<div class="container">
    <div class="col-6 mx-auto text-center">
      <h1 class="h3 my-3 font-weight-normal">ログイン</h1>
      <br/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control", :placeholder => "メールアドレス" %>
      <br/>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :placeholder => "パスワード" %> 
      <br/>
      <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <% end %>
      <div class="action">
        <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
        <% end %> 
      </div>
      <br/>
    </div>
  </div>